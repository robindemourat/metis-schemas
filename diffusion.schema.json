{
  "type": "object",
  "title": "Diffusion",
  "description": "Diffusion schema",
  "$schema": "http://json-schema.org/draft-06/schema#",

  "properties": {
    "type": {
      "type": "string",
      "enum": ["diffusion"],
      "default": "diffusion",
      "editable": false
    },
    "date_started": {
      "type": "number",
      "description": "absolute time date of the diffusion start",
      "editable": false
    },
    "montage_id": {
      "type": "string",
      "description": "id of the montage being diffused"
    },
    "montage_type": {
      "type": "string",
      "description": "type of the montage being diffused",
      "enum": ["micropublication", "dynamic", "static"],
      "editable": false
    },
    "montage_title": {
      "type": "string",
      "description": "title of the montage being diffused",
      "editable": false
    },
    "status": {
      "type": "string",
      "description": "status of the diffusion",
      "enum": ["processing", "success", "failure"],
      "default": "processing",
      "editable": false
    },
    "comment": {
      "type": "string",
      "description": "comment on the diffusion",
      "default": ""
    },
    "parameters": {
      "default": {},
      "description": "montage parameters",
      "oneOfFrom": "montage_type",
      "oneOf": [
        { "$ref": "#/definitions/micropublication" }
      ]
    }
  },
  "required": ["type", "montage_id"],

  "definitions": {
    "micropublication": {
      "type": "object",
      "properties": {
        "targets":{
          "type": "array",
          "title": "targets",
          "default": [],
          "items":
            {
              "type": "string",
              "enum": ["twitter","facebook", "mailing"]
            }
          } 
        }
      }
    }
}
