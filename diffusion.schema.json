{
  "type": "object",
  "title": "Diffusion",
  "description": "Diffusion schema",
  "$schema": "http://json-schema.org/draft-06/schema#",

  "properties": {
    "type": {
      "type": "string",
      "enum": ["diffusion"],
      "default": "diffusion",
      "editable": false
    },
    "date_started": {
      "type": "number",
      "description": "absolute time date of the diffusion start",
      "editable": false
    },
    "montage_id": {
      "type": "string",
      "description": "id of the montage being diffused"
    },
    "montage_type": {
      "type": "string",
      "description": "type of the montage being diffused",
      "enum": ["micropublication", "dynamic", "static"],
      "editable": false
    },
    "montage_title": {
      "type": "string",
      "description": "title of the montage being diffused",
      "editable": false
    },
    "status": {
      "type": "string",
      "description": "status of the diffusion",
      "enum": ["waiting", "processing", "success", "failure"],
      "default": "waiting",
      "editable": false
    },
    "version": {
      "type": "string",
      "description": "comment on the version of the diffusion diffusion",
      "default": ""
    },
    "parameters": {
      "default": {},
      "description": "montage parameters",
      "anyOfFrom": "montage_type",
      "anyOf": [
        { "$ref": "#/definitions/micropublication" },
        { "$ref": "#/definitions/static" },
        { "$ref": "#/definitions/dynamic" }
      ]
    }
  },
  "required": ["type", "montage_id"],

  "definitions": {
    "micropublication": {
      "type": "object",
      "properties": {
        "targets":{
          "type": "array",
          "title": "targets",
          "default": [],
          "items":
            {
              "type": "string",
              "enum": ["twitter", "mailing"],
              "default": ["twitter", "mailing"]
            }
          } 
        },
        "attached_assets":
        {
              "type": "array",
              "default": [],
              "description": "image assets to publish with the diffusion",
              "items":
              {
                  "type": "object",
                  "properties":
                  {
                      "image_asset_id":
                      {
                          "type": "string",
                          "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
                          "description": "image asset uuid",
                          "accept_mimetypes": ["image/png", "image/jpeg", "image/jpg", "image/gif"]
                      }
                  }
              }
          }
      },
      "dynamic": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "description": "version of the release"
          },
          "targets":{
            "type": "array",
            "title": "targets",
            "default": [],
            "items":
              {
                "type": "string",
                "enum": ["web","epub"],
                "default": ["web","epub"]
              }
            } 
          }
      },
      "static": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "description": "version of the release"
          },
          "targets":{
            "type": "array",
            "title": "targets",
            "default": [],
            "items":
              {
                "type": "string",
                "enum": ["pdf","epub"],
                "default": ["pdf","epub"]
              }
            } 
          }
      }
    }
}
